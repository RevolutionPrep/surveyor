<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Surveyor</title>
  <meta name="description" content="">
  <meta name="author" content="Revolution Prep">
  <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="<%= root_url %>apple-touch-icon.png">
  <link rel="apple-touch-icon-precomposed" href="<%= root_url %>apple-touch-icon.png"/>
  <%= stylesheet_link_tag "960", "application" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag "modernizr-1.5.min" %>
</head>
<!--[if lt IE 7 ]> <body class="ie6"> <![endif]-->
<!--[if IE 7 ]>    <body class="ie7"> <![endif]-->
<!--[if IE 8 ]>    <body class="ie8"> <![endif]-->
<!--[if IE 9 ]>    <body class="ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <body> <!--<![endif]-->
  <div id="container">
    <header>
      <div class="container_16">
        <h1><%= link_to "Surveyor", root_url %></h1>
        <% if current_user %>
          <%- if current_user.username == "Admin" %>
            <%= link_to "Create New User", new_user_path %>
          <%- end %>
          <%= link_to "Logout", logout_path, :class => "right" %>
          <%= link_to "Edit Profile", edit_user_path(:current), :class => "right" %>
          <span class="right"><%= current_user.username %></span>
        <% end %>
        <%= render :partial => "shared/flash_messages" %>
        <div class="clearfix"></div>
      </div>
    </header>
    
    <div id="main">
      <div class="container_16">
        <%= render :partial => "shared/navigation" if current_user %>
        <%= render :partial => "shared/breadcrumb" %>
        <div class="<%= current_user ? "grid_13" : "grid_16 alpha"%> omega">
          <%= yield %>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    
    <footer>
      <div class="container_16">
        <span class="copyright">&copy;2010 Revolution Prep</span>
      </div>
      <div class="clearfix"></div>
    </footer>
  </div>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <script>!window.jQuery && document.write('<%= escape_javascript(javascript_include_tag 'jquery-1.4.2.min') %>')</script>
  <%= javascript_include_tag "plugins", "application" %>
  <%- if Rails.env.development? %>
    <%= javascript_include_tag "profiling/yahoo-profiling.min", "profiling/config" %>
  <%- end %>
</body>
</html>